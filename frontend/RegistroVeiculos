    <script>
        // Simulaci√≥n de validaci√≥n de placa duplicada
        document.getElementById('plate').addEventListener('blur', function() {
            const plate = this.value.toUpperCase();
            const plates = ['ABC123', 'XYZ789', 'DEF456', 'GHI789', 'JKL012'];
            
            if (plates.includes(plate)) {
                this.classList.add('input-error');
                this.nextElementSibling.style.display = 'block';
            } else {
                this.classList.remove('input-error');
                this.nextElementSibling.style.display = 'none';
            }
        });
        
        // Validaci√≥n de campos obligatorios
        const requiredFields = document.querySelectorAll('input[required], select[required]');
        requiredFields.forEach(field => {
            field.addEventListener('blur', function() {
                if (!this.value) {
                    this.classList.add('input-error');
                    this.nextElementSibling.style.display = 'block';
                } else {
                    this.classList.remove('input-error');
                    this.nextElementSibling.style.display = 'none';
                }
            });
        });

        // Simulaci√≥n de registro de veh√≠culo
        document.querySelector('.btn-primary').addEventListener('click', function() {
            const requiredFields = document.querySelectorAll('input[required], select[required]');
            let isValid = true;
            
            requiredFields.forEach(field => {
                if (!field.value) {
                    field.classList.add('input-error');
                    field.nextElementSibling.style.display = 'block';
                    isValid = false;
                }
            });
            
            if (isValid) {
                alert('Veh√≠culo registrado exitosamente');
                // Aqu√≠ ir√≠a la l√≥gica para enviar los datos al servidor
            } else {
                alert('Por favor complete todos los campos obligatorios');
            }
        });
    </script>
